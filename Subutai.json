{
    "name": "${environmentName}",
    "description": "Mate Desktop",
    "version": "1.0.0",
    "author": "https://github.com/lbthomsen",
    "ssh-key": "lth",
    "containers": [
        {
            "hostname": "${hostname}",
            "template": "debian-stretch",
            "peer-criteria": "MATE-GROUP",
            "size": "${containerSize}"
        }
    ],
    "peer-criteria": [
        {
            "name": "MATE-GROUP",
            "max-price": "25"
        }
    ],
    "ansible-configuration": {
        "source-url": "https://github.com/subutai-blueprints/mate2go/archive/master.zip",
        "ansible-playbook": "all.json",
        "groups": [
            {
                "name": "mate",
                "hostnames": [
                    "${hostname}"
                ]
            }
        ]
    },
    "user-variables": {
        "environmentName": {
            "description": "Enter the environment name",
            "type": "string",
            "default": "wp",
            "validation": "[a-zA-Z0-9]+"
        },
        "containerSize": {
            "description": "Container Size",
            "type": "enum",
            "default": "MEDIUM",
            "validation": "MEDIUM,LARGE,HUGE"
        },
        "hostname": {
            "description": "Enter the container's hostname",
            "type": "string",
            "default": "mate2go",
            "validation": "[a-zA-Z0-9]+"
        },
    }
}
